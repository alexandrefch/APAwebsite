{% extends 'base.html.twig' %}

{% block title %}Activity index{% endblock %}

{% block body %}
    <section>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Rate</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for activity in activities %}
                <tr>
                    <td>{{ activity.id }}</td>
                    <td>{{ activity.description }}</td>
                    <td>{{ activity.rate }}</td>
                    <td>
                        <a href="{{ path('activity_show', {'id': activity.id}) }}">show</a>
                        <a href="{{ path('activity_edit', {'structure_id':activity.getStructure().id,'id': activity.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
